<div class="col-2 p-0 py-2 d-flex flex-column flex-shrink-0 bg-ldapadmin-menu ldapadmin-menu">
    <ul class="nav nav-pills flex-column mb-auto">
        <li>
            <button class="w-100 btn btn-toggle align-items-center rounded collapsed fs-5" data-bs-toggle="collapse" data-bs-target="#user-collapse" aria-expanded="false" aria-controls="user-collapse">
                <i class="fa-regular fa-user"></i>&nbsp;Utilisateurs
            </button>
            <div id="user-collapse" class="collapse {% if activeMenu == "user_list" or  activeMenu == "user_create" %}show{% endif %}">
                <ul class="ps-0 d-block">
                    <li class="menu-item">
                        <div class="d-flex">
                            <a class="w-100 p-0 d-flex position-relative nav-link {% if activeMenu == "user_list" %}active{% endif %}" href="{{ path('ldapadmin_userlist') }}">
                                <span class="d-flex active_indicator"></span>
                                <span>Utilisateurs actifs</span>
                            </a>
                        </div>
                    </li>
                    {% if is_granted('create', user) %}
                    <li class="menu-item">
                        <div class="d-flex">
                            <a class="w-100 p-0 d-flex position-relative nav-link {% if activeMenu == "user_create" %}active{% endif %}" href="{{ path('ldapadmin_usercreate') }}">
                                <span class="d-flex active_indicator"></span>
                                <span>{{ "createUser" |trans }}</span>
                            </a>
                        </div>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </li>
        
        <li>
            <button class="w-100 btn btn-toggle align-items-center rounded collapsed fs-5" data-bs-toggle="collapse" data-bs-target="#group-collapse" aria-expanded="true"><i class="fa-solid fa-users"></i>&nbsp;Groupe</button>
            <div id="group-collapse" class="collapse {% if activeMenu == "group_list" or  activeMenu == "group_create" %}show{% endif %}">
                <ul class="nav d-block">
                    <li class="menu-item">
                        <div class="d-flex">
                            <a class="w-100 p-0 d-flex position-relative nav-link {% if activeMenu == "group_list" %}active{% endif %}" href="{{ path('ldapadmin_grouplist') }}">
                                <span class="d-flex active_indicator"></span>
                                <span>{{ "AllGroup" |trans }}</span>
                            </a>
                        </div>
                    </li>
                    {% if is_granted('create', user) %}
                    <li class="menu-item">
                        <div class="d-flex">
                            <a class="w-100 p-0 d-flex position-relative text-white nav-link {% if activeMenu == "group_create" %}active{% endif %}" href="{{ path('ldapadmin_groupcreate') }}">
                                <span class="d-flex active_indicator"></span>
                                <span>{{ "groupCreate" |trans }}</span>                            
                            </a>
                        </div>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </li>
        {% if is_granted('create', user) %}
        <li>
            <button class="btn w-100 btn-toggle align-items-center rounded collapsed fs-5" data-bs-toggle="collapse" data-bs-target="#import-collapse" aria-expanded="true"><i class="fa-solid fa-list-check"></i>&nbsp;Importation</button>
            <div id="import-collapse" class="collapse {% if activeMenu == "user_import" or  activeMenu == "user_group_update" %}show{% endif %}">
                <ul class="nav d-block">
                    <li class="menu-item">
                        <div class="d-flex">
                            <a class="w-100 p-0 d-flex position-relative text-white nav-link {% if activeMenu == "user_import" %}active{% endif %}" href="{{ path('ldapadmin_userbulk') }}">
                                <span class="d-flex active_indicator"></span>
                                <span>Importations d'utilisateurs</span>
                            </a>
                        </div>
                    </li>
                    <li class="menu-item">
                        <div class="d-flex">
                            <a class="w-100 p-0 d-flex position-relative text-white nav-link {% if activeMenu == "user_group_update" %}active{% endif %}" href="{{ path('ldapadmin_usergroupupdate') }}">
                                <span class="d-flex active_indicator"></span>
                                <span>Importations de groupes</span>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </li>
        {% endif %}
    </ul>

  </div>
