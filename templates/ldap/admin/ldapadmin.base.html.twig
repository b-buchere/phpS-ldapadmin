<!DOCTYPE html>
<html>
	<head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    	<meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="utf-8">
    	
    	{{ head_meta() }}
    	<title>{% block title %}Welcome!{% endblock %}</title>

    	{{ head_link() }}
    	{{ head_script() }}
        {% block head_style %}{% endblock %}
    
    </head>
    <body>
        
        <div class="vh-100 m-0">
            <header class="p-3 bg-dark text-white">
                <div class="container">
                  <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                      <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                      Centre d'administration
                    </a>

                    <form name="ldap_getinfo" method="post" action="{{ path('ldapgetinfo_navbar') }}">
                        <div id="ldap_getinfo" class="row g-3">
                            <div class="">
                                <input type="text" id="ldap_getinfo_User" name="ldap_getinfo[User]" required="required" placeholder="Utilisateur" class="form-control">
                            </div>
                            <div class="d-none">
                                <button type="submit" id="ldap_getinfo_search" name="ldap_getinfo[search]" class="btn btn-primary mb-3 col-12">Rechercher</button>
                            </div>
                        </div>
                    </form>
            
                    <div class="text-end">

                    </div>
                  </div>
                </div>
            </header>
            <div id="body" class="row m-0">
                {% include 'ldap/admin/menu.html.twig' %}
                <div class="col-10">
                    <div class="container col-10">
                    {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
