<!DOCTYPE html>
<html>
	<head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    	<meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="utf-8">
    	
    	{{ head_meta() }}
    	<title>{% block title %}Welcome!{% endblock %}</title>

    	{{ head_link() }}
    	{{ head_script() }}
        {% block head_style %}{% endblock %}
    
    </head>
    <body>
        
        <div class="vh-100 m-0">
            <header class="p-1 bg-ldapadmin-navbar text-white">
              <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start row">
                <div class="col-4">
                    <div class="text-start">
                        <a href="#" class="align-items-center me-lg-auto mb-2 mb-lg-0 text-white text-decoration-none fs-4">
                          <img src="/assets/images/logo_unml.png" class="position-relative px-2" style="height: 31.5px;top: -2.5px"/>
                          Centre d'administration
                        </a>
                    </div>
                </div>
                <div class="col-4">
                    <form name="ldap_getinfo" method="post" action="{{ path('ldapgetinfo_navbar') }}">
                        <div id="ldap_getinfo" class="row g-3">
                        
                            <div class="input-group">
                                <div class="input-group-text"><i class="fa fa-search"></i></div>
                                <input type="text" id="ldap_getinfo_User" name="ldap_getinfo[User]" required="required" placeholder="{{ "userOrGroupSearch"|trans }}" class="form-control">
                            </div>
                            <div class="d-none">
                                <button type="submit" id="ldap_getinfo_search" name="ldap_getinfo[search]" class="btn btn-primary mb-3 col-12">Rechercher</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-4">
                    <div class="text-end">
                        <span>{{ app.user.entry.cn[0] }}</span>
                        <a href="{{ path('logout') }}" class="text-white ps-1"><i class="fa-solid fa-power-off fa-xl"></i></a>
                    </div>
                </div>
              </div>
            </header>
            <div id="body" class="row m-0">
                {% include 'ldap/admin/menu.html.twig' %}
                <div class="col-10">
                    <div class="container col-10">
                    {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
