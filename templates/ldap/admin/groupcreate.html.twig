{% extends 'ldap/admin/ldapadmin.base.html.twig' %}  

{% block title %}Centre d'administration - Créer un groupe{% endblock %}

{% block body %}
<div class="container col-8">
<h1 class="border-bottom border-dark border-2 py-2">{{ title|trans }}</h1>
{# Affiche tous les messages flash #}
{% for type, messages in app.flashes %}
    <div class="alert bg-{% if type == "error" %}danger{% else %}{{ type }}{% endif %} {% if type != "info" %}text-white{% endif %}">

    {% for message in messages %}
        <p class="m-0">
            {{ message|trans|raw}}
        </p>
    {% endfor %}
    </div>
{% endfor %}
{% if not form.vars.data.id %}
<p class="callout callout-warning p-1">{% trans %}groupCreate.warning{% endtrans %}</p>
{% endif %}
{{ form(form) }}
</div>
{% endblock %}
