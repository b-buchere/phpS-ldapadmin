{% block body %}

{# Affiche tous les messages flash #}
{% for type, messages in app.flashes %}
    <div class="alert bg-{{ type }} {% if type != "info" %}text-white{% endif %}">

    {% for message in messages %}
        <p class="m-0">
            {{ message|raw}}
        </p>
    {% endfor %}
    </div>
{% endfor %}
{{ form(form) }}
{% endblock %}